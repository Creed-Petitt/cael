echo "--- Package Manager Demo ---";

// 1. Create a library on the fly
let lib_code = "fn greet(user) { return 'Hello ' + user; }";
save_lib("utils.cipr", lib_code);

// 2. Load it
include("utils.cipr");

// 3. Use it
echo greet("Hacker");

// 4. Cleanup (Self-destruct)
// In a real scenario, you'd keep it in ~/.cipr/libs/
echo "Library test successful.";
