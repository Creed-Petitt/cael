echo "--- Fast Port Scanner ---";
let target = "127.0.0.1";
let start = 8000;
let end = 8005;

echo "Scanning " + target + " (" + start + "-" + end + ")...";

for (let p = start; p <= end; p = p + 1) {
    let fd = connect(target, p);
    if (fd > 0) {
        echo "[+] OPEN: " + p;
        close(fd);
    }
}
echo "Scan complete.";
